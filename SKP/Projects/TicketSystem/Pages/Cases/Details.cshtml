@page
@model TicketSystem.Pages.Cases.DetailsModel

@{
    ViewData["Title"] = "Sags detaljer";
}

<h1>Detaljer</h1>

<div>
    <h4>Sag</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Case.RequestorID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Case.Requestor.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Case.OperatorID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Case.Operator.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Case.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Case.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Case.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Case.Details)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Case.StatusID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Case.Status.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Case.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Case.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Case.Closed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Case.Closed)
        </dd>
    </dl>
</div>
<div>
    @if ((await AuthorizationService.AuthorizeAsync(User, Model.Case, CaseOperations.Update)).Succeeded)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Case.CaseID">Rediger</a>
        <text> | </text>
    }
    <a asp-page="./Index">Tilbage</a>
</div>
